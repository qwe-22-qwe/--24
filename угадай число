#include <iostream>
#include <windows.h>
#include<time.h>
using namespace std;
void main()
{
    SetConsoleCP(1251);//Включаем русский язык
    SetConsoleOutputCP(1251);
    srand (unsigned (time(NULL)));//Сбросс генератора
    int a,b,i;//Инициализация переменных
    a=rand()%10+1;//Генерируем число от 1 до 10
     cout<<"Игра \"Угадай число\".\n\n";
    cout<<"Компьютер \"задумал\" число \n";
    cout<<"Введите число от 1 до 10 и нажмите <Enter>\n\n";
    for(i=1;i<6;i++)//Цикл проверки
    {
        cout<<"--->";
        cin>>b;//Ввод числа
        if(b==a)//Сравнение чисел
        {
            cout<<"Вы выиграли! Поздравляю!\n";
            cout<<"Вы отгадали число с "<<i<<"-ой попытки!\n";
            break;
        }
        if(b>a)
        {
            cout<<"Нет, введённое Вами число, больше \"задуманного\" компьютером\n";
        }
        if(b<a)
        {
            cout<<"Нет, введённое Вами число, меньше \"задуманного\" компьютером\n";
        }
    }
    if(b!=a&&i==5)//Проверка
    {
        cout<<"К сожалению Вы так и не смогли угадать число...\n";
    }
}
